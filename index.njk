<!-- Hero Section -->
<section class="hero">
  <div class="container">
    <div class="hero__content">
      <p class="hero__eyebrow animate" data-editable="text" data-prop="hero.eyebrow">{{ hero.eyebrow }}</p>
      <h1 class="hero__title animate animate-delay-1">
        <span data-editable="text" data-prop="hero.title">{{ hero.title }}</span>
        <span data-editable="text" data-prop="hero.title_highlight">{{ hero.title_highlight }}</span>
        <span data-editable="text" data-prop="hero.title_end">{{ hero.title_end }}</span>
      </h1>
      <p class="hero__subtitle animate animate-delay-2" data-editable="text" data-prop="hero.subtitle">{{ hero.subtitle }}</p>
      <div class="hero__cta animate animate-delay-3">
        <a href="{{ site.calendly_url }}" class="btn btn--primary btn--large" data-editable="text" data-prop="hero.cta_primary">{{ hero.cta_primary }}</a>
      </div>
    </div>
  </div>
</section>

<!-- Quick Proof Section -->
<section class="quickproof section">
  <div class="container">
    <div class="quickproof__header">
      <p class="eyebrow" data-editable="text" data-prop="testimonials.section_eyebrow">{{ testimonials.section_eyebrow }}</p>
      <h2 data-editable="text" data-prop="testimonials.section_title">{{ testimonials.section_title }}</h2>
    </div>
    <div class="quickproof__grid">
      {% for item in testimonials.quick_proof %}
      <div class="quickproof__card fade-in">
        <div class="quickproof__avatar">
          <img src="{{ item.image }}" alt="{{ item.name }}">
        </div>
        <div class="quickproof__content">
          <h3 class="quickproof__headline">{{ item.headline }}</h3>
          <p class="quickproof__meta">{{ item.meta }}</p>
          <p class="quickproof__text">{{ item.text }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Problem Section -->
<section class="problem section" id="problem">
  <div class="container">
    <div class="problem__header">
      <p class="eyebrow" data-editable="text" data-prop="problem.eyebrow">{{ problem.eyebrow }}</p>
      <h2 data-editable="text" data-prop="problem.title">{{ problem.title }}</h2>
    </div>
    <div class="problem__definition fade-in">
      <p class="problem__definition-text">
        <strong class="problem__definition-term" data-editable="text" data-prop="problem.definition.term">{{ problem.definition.term }}:</strong>
        <span data-editable="text" data-prop="problem.definition.text">{{ problem.definition.text }}</span>
      </p>
    </div>
    <div class="problem__comparison fade-in">
      <div class="problem__comparison-grid">
        <div class="problem__column problem__column--left">
          <h3 class="problem__column-title" data-editable="text" data-prop="problem.comparison.left.title">{{ problem.comparison.left.title }}</h3>
          <span class="problem__column-badge" data-editable="text" data-prop="problem.comparison.left.badge">{{ problem.comparison.left.badge }}</span>
          <ul class="problem__list">
            {% for item in problem.comparison.left.items %}
            <li class="problem__item">
              <span class="problem__item-icon">&#10007;</span>
              <span class="problem__item-text">{{ item.text | safe }}</span>
            </li>
            {% endfor %}
          </ul>
        </div>
        <div class="problem__column problem__column--right">
          <h3 class="problem__column-title" data-editable="text" data-prop="problem.comparison.right.title">{{ problem.comparison.right.title }}</h3>
          <span class="problem__column-badge" data-editable="text" data-prop="problem.comparison.right.badge">{{ problem.comparison.right.badge }}</span>
          <ul class="problem__list">
            {% for item in problem.comparison.right.items %}
            <li class="problem__item">
              <span class="problem__item-icon">&#10003;</span>
              <span class="problem__item-text">{{ item.text | safe }}</span>
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Results Carousel Section -->
<section class="results-carousel section" id="results">
  <div class="container">
    <div class="results-carousel__header">
      <p class="eyebrow">{{ results.section_eyebrow }}</p>
      <h2>{{ results.section_title }}</h2>
      <p class="subtitle" style="margin:20px auto 0;text-align:center">{{ results.section_subtitle }}</p>
    </div>
  </div>
  <div class="results-carousel__wrapper">
    <!-- Row 1 -->
    <div class="results-carousel__row" id="carousel-row-1">
      {% for card in results.row_1 %}
      <div class="results-card">
        <div class="results-card__avatar">
          <img src="{{ card.image }}" alt="{{ card.type }}">
        </div>
        <div class="results-card__content">
          <span class="results-card__type">{{ card.type }}</span>
          <h3 class="results-card__headline">{{ card.headline }}</h3>
          <p class="results-card__text">{{ card.text }}</p>
          <div class="results-card__metrics">
            <div class="results-card__metric results-card__metric--before">
              <p class="results-card__metric-label">{{ card.metric_before_label }}</p>
              <p class="results-card__metric-value">{{ card.metric_before_value }}</p>
            </div>
            <div class="results-card__metric results-card__metric--after">
              <p class="results-card__metric-label">{{ card.metric_after_label }}</p>
              <p class="results-card__metric-value">{{ card.metric_after_value }}</p>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>

    <!-- Row 2 -->
    <div class="results-carousel__row" id="carousel-row-2">
      {% for card in results.row_2 %}
      <div class="results-card">
        <div class="results-card__avatar">
          <img src="{{ card.image }}" alt="{{ card.type }}">
        </div>
        <div class="results-card__content">
          <span class="results-card__type">{{ card.type }}</span>
          <h3 class="results-card__headline">{{ card.headline }}</h3>
          <p class="results-card__text">{{ card.text }}</p>
          <div class="results-card__metrics">
            <div class="results-card__metric results-card__metric--before">
              <p class="results-card__metric-label">{{ card.metric_before_label }}</p>
              <p class="results-card__metric-value">{{ card.metric_before_value }}</p>
            </div>
            <div class="results-card__metric results-card__metric--after">
              <p class="results-card__metric-label">{{ card.metric_after_label }}</p>
              <p class="results-card__metric-value">{{ card.metric_after_value }}</p>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
  <div class="container">
    <div class="results-carousel__cta">
      <a href="{{ site.calendly_url }}" class="btn btn--primary btn--large">Get Your Free Keep Rate Audit</a>
      <a href="#" class="btn btn--outline btn--large" data-open-modal="course-modal">Take the Free Course</a>
    </div>
  </div>
</section>

<!-- Founder Section -->
<section class="founder section" id="founder">
  <div class="container">
    <div class="founder__card fade-in">
      <div class="founder__logo-header">
        <div class="founder__logo-line"></div>
        <img src="{{ site.logo.icon }}" alt="WealthBridge" class="founder__logo-icon">
        <div class="founder__logo-line"></div>
      </div>
      <p class="founder__greeting" data-editable="text" data-prop="founder.greeting">{{ founder.greeting }}</p>
      <div class="founder__story">
        {% for paragraph in founder.story %}
        <p>{{ paragraph }}</p>
        {% endfor %}
      </div>
      <div class="founder__signature-area">
        <svg class="founder__signature-svg" viewBox="0 0 200 60" xmlns="http://www.w3.org/2000/svg">
          <path d="M10 45 Q 30 10, 50 40 T 90 35 Q 110 30, 130 38 T 170 30 Q 185 25, 195 35" stroke="#1A2B4A" stroke-width="2" fill="none" stroke-linecap="round"></path>
        </svg>
        <div class="founder__signature-details">
          <div class="founder__signature-photo">
            <img src="{{ founder.photo }}" alt="{{ founder.name }}" data-editable="image" data-prop-src="founder.photo">
          </div>
          <div>
            <p class="founder__signature-name" data-editable="text" data-prop="founder.name">{{ founder.name }}</p>
            <p class="founder__signature-title" data-editable="text" data-prop="founder.title">{{ founder.title }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Process Section -->
<section class="process section" id="process">
  <div class="container" style="display:flex;flex-direction:column">
    <div class="process__header" style="text-align:center">
      <p class="eyebrow" data-editable="text" data-prop="process.eyebrow">{{ process.eyebrow }}</p>
      <h2 style="margin:0 auto;font:600 48px/55.2px 'Source Serif 4', 'Source Serif 4 Fallback'" data-editable="text" data-prop="process.title">{{ process.title }}</h2>
      <div style="color:rgba(255, 255, 255, 1);font-size:20px;font-weight:400;line-height:34px;max-width:650px;margin:20px auto 40px">
        <div data-editable="text" data-prop="process.subtitle">{{ process.subtitle }}</div>
      </div>
    </div>
    <div class="process__layout">
      <div class="process__cards">
        {% for card in process.cards %}
        <div class="process-card">
          <h3 class="process-card__title">{{ card.title }}</h3>
          <p class="process-card__text">{{ card.text }}</p>
        </div>
        {% endfor %}
      </div>
      <div class="process__circles">
        <div class="circles-wrapper">
          <img loading="lazy" src="{{ process.image }}" style="aspect-ratio:1;object-fit:cover;object-position:center;width:100%;margin-top:20px;min-height:20px;min-width:20px;overflow:hidden" alt="Network diagram" data-editable="image" data-prop-src="process.image">
        </div>
      </div>
    </div>
    <div class="process__cta">
      <p class="process__cta-text" data-editable="text" data-prop="process.cta_text">{{ process.cta_text }}</p>
      <a href="{{ site.calendly_url }}" class="btn btn--white btn--large" data-editable="text" data-prop="process.cta_primary">{{ process.cta_primary }}</a>
      <a href="#" class="link process__cta-link" data-open-modal="course-modal" data-editable="text" data-prop="process.cta_secondary">{{ process.cta_secondary | safe }}</a>
    </div>
  </div>
</section>

<!-- Interested Section -->
<section class="interested section" id="interested">
  <div class="container">
    <div class="interested__header">
      <h2 data-editable="text" data-prop="interested.title">{{ interested.title }}</h2>
    </div>
    <div class="interested__box fade-in">
      <h3 class="interested__box-title" data-editable="text" data-prop="interested.box_title">{{ interested.box_title }}</h3>
      <ul class="interested__list">
        {% for item in interested.items %}
        <li class="interested__item">
          <span class="interested__item-bullet"></span>
          <span>{{ item.text | safe }}</span>
        </li>
        {% endfor %}
      </ul>
      <div class="interested__cta">
        <a href="{{ site.calendly_url }}" class="btn btn--secondary btn--large" data-editable="text" data-prop="interested.cta">{{ interested.cta }}</a>
      </div>
    </div>
  </div>
</section>

<!-- FAQ Section -->
<section class="faq section" id="faq">
  <div class="container">
    <div class="faq__header">
      <p class="eyebrow">{{ faq.section_eyebrow }}</p>
      <h2>{{ faq.section_title }}</h2>
    </div>
    <div class="faq__list">
      {% for item in faq.items %}
      <div class="faq-item">
        <button class="faq-item__question"><span>{{ item.question }}</span><span class="faq-item__icon">+</span></button>
        <div class="faq-item__answer">
          <div class="faq-item__answer-inner">{{ item.answer }}</div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="cta section" id="cta">
  <div class="container">
    <div class="cta__inner">
      <p class="eyebrow" style="color:var(--gold)" data-editable="text" data-prop="cta_section.eyebrow">{{ cta_section.eyebrow }}</p>
      <h2 class="cta__title" data-editable="text" data-prop="cta_section.title">{{ cta_section.title }}</h2>
      <p class="subtitle cta__subtitle" data-editable="text" data-prop="cta_section.subtitle">{{ cta_section.subtitle }}</p>
      <div class="cta__buttons">
        <a href="{{ site.calendly_url }}" class="btn btn--primary btn--large" data-editable="text" data-prop="cta_section.button_text">{{ cta_section.button_text }}</a>
      </div>
      <p class="cta__note" data-editable="text" data-prop="cta_section.note">{{ cta_section.note }}</p>
    </div>
  </div>
</section>

<!-- Modal -->
<div class="modal-overlay" id="course-modal">
  <div class="modal">
    <button class="modal__close" aria-label="Close modal">&times;</button>
    <div class="modal__form" id="course-form-container">
      <h3 class="modal__title" data-editable="text" data-prop="modal.title">{{ modal.title }}</h3>
      <p class="modal__description" data-editable="text" data-prop="modal.description">{{ modal.description }}</p>
      <form id="course-form">
        <div class="modal__form">
          <input type="email" class="modal__input" placeholder="Enter your email address" required name="email">
          <button type="submit" class="modal__submit" data-editable="text" data-prop="modal.button_text">{{ modal.button_text }}</button>
        </div>
      </form>
    </div>
    <div class="modal__success" id="course-success">
      <div class="modal__success-icon">&#10003;</div>
      <h3 class="modal__success-title" data-editable="text" data-prop="modal.success_title">{{ modal.success_title }}</h3>
      <p class="modal__success-text" data-editable="text" data-prop="modal.success_text">{{ modal.success_text }}</p>
    </div>
  </div>
</div>
