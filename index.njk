<!-- Hero Section -->
<section class="hero">
  <div class="container">
    <div class="hero__content">
      <p class="hero__eyebrow animate text-color--{{ hero_eyebrow_color }}" data-editable="text" data-prop="hero_eyebrow">{{ hero_eyebrow }}</p>
      <h1 class="hero__title animate animate-delay-1 text-color--{{ hero_title_color }}">
        <span data-editable="text" data-prop="hero_title">{{ hero_title }}</span>
        <span class="text-color--{{ hero_title_highlight_color }}" data-editable="text" data-prop="hero_title_highlight">{{ hero_title_highlight }}</span>
        <span data-editable="text" data-prop="hero_title_end">{{ hero_title_end }}</span>
      </h1>
      <p class="hero__subtitle animate animate-delay-2 text-color--{{ hero_subtitle_color }}" data-editable="text" data-prop="hero_subtitle">{{ hero_subtitle }}</p>
      <div class="hero__cta animate animate-delay-3">
        <a href="{{ site.calendly_url }}" class="btn btn--primary btn--large" data-editable="text" data-prop="hero_cta_primary">{{ hero_cta_primary }}</a>
      </div>
    </div>
  </div>
</section>

<!-- Quick Proof Section -->
<section class="quickproof section">
  <div class="container">
    <div class="quickproof__header">
      <p class="eyebrow" data-editable="text" data-prop="quickproof_eyebrow">{{ quickproof_eyebrow }}</p>
      <h2 data-editable="text" data-prop="quickproof_title">{{ quickproof_title }}</h2>
    </div>
    <div class="quickproof__grid">
      {% for item in quickproof_items %}
      <div class="quickproof__card fade-in">
        {% if item.image %}
        <div class="quickproof__avatar">
          <img src="{{ item.image }}" alt="{{ item.meta }}" />
        </div>
        {% endif %}
        <div class="quickproof__content">
          <h3 class="quickproof__headline">{{ item.headline }}</h3>
          <p class="quickproof__meta">{{ item.meta }}</p>
          <p class="quickproof__text">{{ item.text }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Problem Section -->
<section class="problem section" id="problem">
  <div class="container">
    <div class="problem__header">
      <p class="eyebrow" data-editable="text" data-prop="problem_eyebrow">{{ problem_eyebrow }}</p>
      <h2 class="text-color--{{ problem_title_color }}" data-editable="text" data-prop="problem_title">{{ problem_title }}</h2>
    </div>
    <div class="problem__definition fade-in">
      <p class="problem__definition-text">
        <strong class="problem__definition-term" data-editable="text" data-prop="problem_definition_term">{{ problem_definition_term }}:</strong>
        <span data-editable="text" data-prop="problem_definition_text">{{ problem_definition_text }}</span>
      </p>
    </div>
    <div class="problem__comparison fade-in">
      <div class="problem__comparison-grid">
        <div class="problem__column problem__column--left">
          <h3 class="problem__column-title" data-editable="text" data-prop="problem_left_title">{{ problem_left_title }}</h3>
          <span class="problem__column-badge" data-editable="text" data-prop="problem_left_badge">{{ problem_left_badge }}</span>
          <ul class="problem__list">
            {% for item in problem_left_items %}
            <li class="problem__item">
              <span class="problem__item-icon">&#10007;</span>
              <span class="problem__item-text">{{ item.text | safe }}</span>
            </li>
            {% endfor %}
          </ul>
        </div>
        <div class="problem__column problem__column--right">
          <h3 class="problem__column-title" data-editable="text" data-prop="problem_right_title">{{ problem_right_title }}</h3>
          <span class="problem__column-badge" data-editable="text" data-prop="problem_right_badge">{{ problem_right_badge }}</span>
          <ul class="problem__list">
            {% for item in problem_right_items %}
            <li class="problem__item">
              <span class="problem__item-icon">&#10003;</span>
              <span class="problem__item-text">{{ item.text | safe }}</span>
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

{% if show_results_carousel %}
<!-- Results Carousel Section -->
<section class="results-carousel section" id="results">
  <div class="container">
    <div class="results-carousel__header">
      <p class="eyebrow">{{ results.section_eyebrow }}</p>
      <h2>{{ results.section_title }}</h2>
      <p class="subtitle" style="margin:20px auto 0;text-align:center">{{ results.section_subtitle }}</p>
    </div>
  </div>
  <div class="results-carousel__wrapper">
    <!-- Row 1 -->
    <div class="results-carousel__row" id="carousel-row-1">
      {% for card in results.row_1 %}
      <div class="results-card">
        <div class="results-card__avatar">
          <img src="{{ card.image }}" alt="{{ card.type }}" />
        </div>
        <div class="results-card__content">
          <span class="results-card__type">{{ card.type }}</span>
          <h3 class="results-card__headline">{{ card.headline }}</h3>
          <p class="results-card__text">{{ card.text }}</p>
          <div class="results-card__metrics">
            <div class="results-card__metric results-card__metric--before">
              <p class="results-card__metric-label">{{ card.metric_before_label }}</p>
              <p class="results-card__metric-value">{{ card.metric_before_value }}</p>
            </div>
            <div class="results-card__metric results-card__metric--after">
              <p class="results-card__metric-label">{{ card.metric_after_label }}</p>
              <p class="results-card__metric-value">{{ card.metric_after_value }}</p>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>

    <!-- Row 2 -->
    <div class="results-carousel__row" id="carousel-row-2">
      {% for card in results.row_2 %}
      <div class="results-card">
        <div class="results-card__avatar">
          <img src="{{ card.image }}" alt="{{ card.type }}" />
        </div>
        <div class="results-card__content">
          <span class="results-card__type">{{ card.type }}</span>
          <h3 class="results-card__headline">{{ card.headline }}</h3>
          <p class="results-card__text">{{ card.text }}</p>
          <div class="results-card__metrics">
            <div class="results-card__metric results-card__metric--before">
              <p class="results-card__metric-label">{{ card.metric_before_label }}</p>
              <p class="results-card__metric-value">{{ card.metric_before_value }}</p>
            </div>
            <div class="results-card__metric results-card__metric--after">
              <p class="results-card__metric-label">{{ card.metric_after_label }}</p>
              <p class="results-card__metric-value">{{ card.metric_after_value }}</p>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
  <div class="container">
    <div class="results-carousel__cta">
      <a href="{{ site.calendly_url }}" class="btn btn--primary btn--large">Get Your Free Keep Rate Audit</a>
      <a href="#" class="btn btn--outline btn--large" data-open-modal="course-modal">Take the Free Course</a>
    </div>
  </div>
</section>
{% endif %}

<!-- Founder Section -->
<section class="founder section" id="founder">
  <div class="container">
    <div class="founder__card fade-in">
      <div class="founder__logo-header">
        <div class="founder__logo-line"></div>
        <img src="{{ site.logo.icon }}" alt="WealthBridge" class="founder__logo-icon" />
        <div class="founder__logo-line"></div>
      </div>
      <p class="founder__greeting" data-editable="text" data-prop="founder_greeting">{{ founder_greeting }}</p>
      <div class="founder__story">
        {% for paragraph in founder_story %}
        <p>{{ paragraph }}</p>
        {% endfor %}
      </div>
      <div class="founder__signature-area">
        <svg class="founder__signature-svg" viewbox="0 0 200 60" xmlns="http://www.w3.org/2000/svg">
          <path d="M10 45 Q 30 10, 50 40 T 90 35 Q 110 30, 130 38 T 170 30 Q 185 25, 195 35" stroke="#1A2B4A" stroke-width="2" fill="none" stroke-linecap="round" />
        </svg>
        <div class="founder__signature-details">
          <div class="founder__signature-photo">
            <img src="{{ founder_photo }}" alt="{{ founder_name }}" data-editable="image" data-prop-src="founder_photo" />
          </div>
          <div>
            <p class="founder__signature-name" data-editable="text" data-prop="founder_name">{{ founder_name }}</p>
            <p class="founder__signature-title" data-editable="text" data-prop="founder_title">{{ founder_title }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Process Section -->
<section class="process section" id="process">
  <div class="container" style="display:flex;flex-direction:column">
    <div class="process__header" style="text-align:center">
      <p class="eyebrow text-color--{{ process_eyebrow_color }}" data-editable="text" data-prop="process_eyebrow">{{ process_eyebrow }}</p>
      <h2 class="text-color--{{ process_title_color }}" style="margin:0 auto;font:600 48px/55.2px 'Source Serif 4', 'Source Serif 4 Fallback'" data-editable="text" data-prop="process_title">{{ process_title }}</h2>
      <div style="color:rgba(255, 255, 255, 1);font-size:20px;font-weight:400;line-height:34px;max-width:650px;margin:20px auto 40px">
        <div data-editable="text" data-prop="process_subtitle">{{ process_subtitle }}</div>
      </div>
    </div>
    <div class="process__layout">
      <div class="process__cards">
        {% for card in process_cards %}
        <div class="process-card">
          <h3 class="process-card__title">{{ card.title }}</h3>
          <p class="process-card__text">{{ card.text }}</p>
        </div>
        {% endfor %}
      </div>
      <div class="process__circles">
        <div class="circles-wrapper">
          <img loading="lazy" src="{{ process_image }}" style="aspect-ratio:1;object-fit:cover;object-position:center;width:100%;margin-top:20px;min-height:20px;min-width:20px;overflow:hidden" alt="Network diagram" data-editable="image" data-prop-src="process_image" />
        </div>
      </div>
    </div>
    <div class="process__cta">
      <p class="process__cta-text" data-editable="text" data-prop="process_cta_text">{{ process_cta_text }}</p>
      <a href="{{ site.calendly_url }}" class="btn btn--white btn--large" data-editable="text" data-prop="process_cta_primary">{{ process_cta_primary }}</a>
      <a href="#" class="link process__cta-link" data-open-modal="course-modal" data-editable="text" data-prop="process_cta_secondary">{{ process_cta_secondary | safe }}</a>
    </div>
  </div>
</section>

<!-- Interested Section -->
<section class="interested section" id="interested">
  <div class="container">
    <div class="interested__header">
      <h2 class="text-color--{{ interested_title_color }}" data-editable="text" data-prop="interested_title">{{ interested_title }}</h2>
    </div>
    <div class="interested__box fade-in">
      <h3 class="interested__box-title" data-editable="text" data-prop="interested_box_title">{{ interested_box_title }}</h3>
      <ul class="interested__list">
        {% for item in interested_items %}
        <li class="interested__item">
          <span class="interested__item-bullet"></span>
          <span>{{ item.text | safe }}</span>
        </li>
        {% endfor %}
      </ul>
      <div class="interested__cta">
        <a href="{{ site.calendly_url }}" class="btn btn--secondary btn--large" data-editable="text" data-prop="interested_cta">{{ interested_cta }}</a>
      </div>
    </div>
  </div>
</section>

<!-- FAQ Section -->
<section class="faq section" id="faq">
  <div class="container">
    <div class="faq__header">
      <p class="eyebrow">{{ faq.section_eyebrow }}</p>
      <h2>{{ faq.section_title }}</h2>
    </div>
    <div class="faq__list">
      {% for item in faq.items %}
      <div class="faq-item">
        <button class="faq-item__question"><span>{{ item.question }}</span><span class="faq-item__icon">+</span></button>
        <div class="faq-item__answer">
          <div class="faq-item__answer-inner">{{ item.answer }}</div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="cta section" id="cta">
  <div class="container">
    <div class="cta__inner">
      <p class="eyebrow text-color--{{ cta_eyebrow_color }}" data-editable="text" data-prop="cta_eyebrow">{{ cta_eyebrow }}</p>
      <h2 class="cta__title text-color--{{ cta_title_color }}" data-editable="text" data-prop="cta_title">{{ cta_title }}</h2>
      <p class="subtitle cta__subtitle" data-editable="text" data-prop="cta_subtitle">{{ cta_subtitle }}</p>
      <div class="cta__buttons">
        <a href="{{ site.calendly_url }}" class="btn btn--primary btn--large" data-editable="text" data-prop="cta_button_text">{{ cta_button_text }}</a>
      </div>
      <p class="cta__note" data-editable="text" data-prop="cta_note">{{ cta_note }}</p>
    </div>
  </div>
</section>

<!-- Modal -->
<div class="modal-overlay" id="course-modal">
  <div class="modal">
    <button class="modal__close" aria-label="Close modal">&times;</button>
    <div class="modal__form" id="course-form-container">
      <h3 class="modal__title" data-editable="text" data-prop="modal_title">{{ modal_title }}</h3>
      <p class="modal__description" data-editable="text" data-prop="modal_description">{{ modal_description }}</p>
      <form id="course-form">
        <div class="modal__form">
          <input type="email" class="modal__input" placeholder="Enter your email address" required name="email" />
          <button type="submit" class="modal__submit" data-editable="text" data-prop="modal_button_text">{{ modal_button_text }}</button>
        </div>
      </form>
    </div>
    <div class="modal__success" id="course-success">
      <div class="modal__success-icon">&#10003;</div>
      <h3 class="modal__success-title" data-editable="text" data-prop="modal_success_title">{{ modal_success_title }}</h3>
      <p class="modal__success-text" data-editable="text" data-prop="modal_success_text">{{ modal_success_text }}</p>
    </div>
  </div>
</div>
