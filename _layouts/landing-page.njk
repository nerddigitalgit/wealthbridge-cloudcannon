---
layout: base.njk
---

<!-- Hero Section -->
<section class="hero hero--landing section--{{ hero_background | default('cream') }}">
  <div class="container">
    <div class="hero__grid">
      <div class="hero__content">
        {% if hero_badge %}
        <div class="hero__badge animate">{{ hero_badge }}</div>
        {% endif %}

        <h1 class="hero__title animate animate-delay-1">{{ hero_title }}</h1>
        <p class="hero__subtitle animate animate-delay-2">{{ hero_subtitle }}</p>

        {% if hero_benefits %}
        <div class="hero__benefits animate animate-delay-3">
          {% for benefit in hero_benefits %}
          <div class="hero__benefit">
            <span class="hero__benefit-icon">
              <svg width="12" height="12" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24"><polyline points="20 6 9 17 4 12"></polyline></svg>
            </span>
            <span>{{ benefit.text }}</span>
          </div>
          {% endfor %}
        </div>
        {% endif %}

        {% if hero_cta_text %}
        <div class="hero__cta animate animate-delay-3">
          <a href="{{ hero_cta_url | default(site.calendly_url) }}" class="btn btn--primary btn--large">{{ hero_cta_text }}</a>
        </div>
        {% endif %}
      </div>

      <!-- Form Card -->
      {% if show_form %}
      <div class="form-card form-card--landing animate animate-delay-2">
        <div class="form-card__header">
          <h2 class="form-card__title">{{ form_title | default('Get Started') }}</h2>
          {% if form_subtitle %}
          <p class="form-card__subtitle">{{ form_subtitle }}</p>
          {% endif %}
        </div>

        {% if form_embed_code %}
        <div class="form-embed">
          {{ form_embed_code | safe }}
        </div>
        {% else %}
        <p class="form-card__placeholder">Add your form embed code in the page settings.</p>
        {% endif %}

        {% if form_note %}
        <p class="form-note">{{ form_note }}</p>
        {% endif %}
      </div>
      {% endif %}
    </div>
  </div>
</section>

<!-- Main Content Section -->
{% if show_content_section %}
<section class="content-section section section--{{ content_background | default('white') }}">
  <div class="container container--narrow">
    {% if content_eyebrow %}
    <p class="eyebrow">{{ content_eyebrow }}</p>
    {% endif %}

    {% if content_title %}
    <h2>{{ content_title }}</h2>
    {% endif %}

    {% if content_body %}
    <div class="content-section__body">
      {{ content_body | safe }}
    </div>
    {% endif %}
  </div>
</section>
{% endif %}

<!-- Benefits/Features Section -->
{% if show_benefits_section %}
<section class="benefits section section--{{ benefits_background | default('cream') }}">
  <div class="container">
    <div class="benefits__header">
      {% if benefits_eyebrow %}
      <p class="eyebrow">{{ benefits_eyebrow }}</p>
      {% endif %}
      <h2>{{ benefits_title | default('What You\'ll Get') }}</h2>
      {% if benefits_subtitle %}
      <p class="subtitle">{{ benefits_subtitle }}</p>
      {% endif %}
    </div>

    {% if benefits_items %}
    <div class="benefits__grid">
      {% for item in benefits_items %}
      <div class="benefits__card">
        {% if item.icon %}
        <div class="benefits__icon">{{ item.icon | safe }}</div>
        {% else %}
        <div class="benefits__icon">
          <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><polyline points="20 6 9 17 4 12"></polyline></svg>
        </div>
        {% endif %}
        <h3 class="benefits__card-title">{{ item.title }}</h3>
        <p class="benefits__card-text">{{ item.text }}</p>
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</section>
{% endif %}

<!-- CTA Section -->
{% if show_cta_section %}
<section class="cta section section--{{ cta_background | default('navy') }}">
  <div class="container">
    <div class="cta__inner">
      {% if cta_eyebrow %}
      <p class="eyebrow">{{ cta_eyebrow }}</p>
      {% endif %}
      <h2 class="cta__title">{{ cta_title | default('Ready to Get Started?') }}</h2>
      {% if cta_subtitle %}
      <p class="subtitle cta__subtitle">{{ cta_subtitle }}</p>
      {% endif %}
      <a href="{{ cta_button_url | default(site.calendly_url) }}" class="btn btn--primary btn--large">{{ cta_button_text | default('Get Started') }}</a>
    </div>
  </div>
</section>
{% endif %}
